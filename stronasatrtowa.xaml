<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiApp8.MainPage"
    Shell.NavBarIsVisible="False">

    <Grid>

       
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#8E4BCF" Offset="0.0"/>
                <GradientStop Color="#6B2E9B" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Padding="20,48,20,0" RowDefinitions="Auto,*">

           
            <Grid ColumnDefinitions="60,*" VerticalOptions="Start">

               
                <Border
                    Grid.Column="0"
                    HeightRequest="44"
                    WidthRequest="44"
                                  
                    BackgroundColor="#FFD43B"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Padding="0">
                    <Label Text="â†"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Black"/>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                </Border>

                
                <Label Grid.Column="1"
                       Text="New game"
                       FontSize="22"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Margin="12,0,0,0"
                       TextColor="White"/>
            </Grid>

            
            <StackLayout Grid.Row="1"
                         Padding="20,30"
                         Spacing="20"
                         VerticalOptions="Start">

                <Border BackgroundColor="#4A1F63"                       
                       Padding="18" >
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <StackLayout Spacing="14">

                        
                        <Label Text="Player 1's name"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#FFD43B"/>

                        <Border Padding="0"
                               BackgroundColor="White"
                               
                               HeightRequest="44">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Entry Placeholder="Enter name"
                                   PlaceholderColor="#9A9A9A"
                                   VerticalOptions="Center"/>
                        </Border>

                        
                        <Label Text="Player 2's name"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#FFD43B"/>

                        <Border Padding="0"
                               BackgroundColor="White"
                               
                               HeightRequest="44">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Entry Placeholder="Enter name"
                                   PlaceholderColor="#9A9A9A"
                                   VerticalOptions="Center"/>
                        </Border>

                      
                        <Button Text="Submit"
                                BackgroundColor="#FFD43B"
                                TextColor="Black"
                                FontAttributes="Bold"
                                CornerRadius="24"
                                HeightRequest="48"
                                WidthRequest="180"
                                HorizontalOptions="Center"/>

                    </StackLayout>
                </Border>

            </StackLayout>

        </Grid>

    </Grid>

</ContentPage>
