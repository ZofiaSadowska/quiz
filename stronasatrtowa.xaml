<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp8.MainPage"
             BackgroundColor="#451F55">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Quizz"
                TextColor="#F8C630"
                FontSize="96"
                FontAttributes="Bold"
              HorizontalOptions="Center"
                />


            <Button
                x:Name="Start"
                Text="Start"                
                HorizontalOptions="Fill" 
                BackgroundColor="#F8C630"
                TextColor="#E54F6D"
                 FontAttributes="Bold"/>

            <Button
                x:Name="LiderBoard"
                Text="LiderBoard"                
                HorizontalOptions="Fill" 
                BackgroundColor="#F8C630"
                TextColor="#E54F6D"
                FontAttributes="Bold"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
