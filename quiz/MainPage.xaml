<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="quiz.MainPage"
             BackgroundColor="#451F55">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Quizz"
                TextColor="#F8C630"
                FontSize="96"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,130,0,130"
                   
                />
            <!--Shadow="#F1F1F1F, 5,5"-->


            <Button
                x:Name="Start"
                Text="Start"                
                HorizontalOptions="Fill" 
                BackgroundColor="#F8C630"
                TextColor="#E54F6D"
                FontAttributes="Bold" 
                Clicked="StartButton_Clicked" 
                 />
            <!--Shadow="#F1F1F1F, 5,5"-->

            <Button
                x:Name="LiderBoard"
                Text="LiderBoard"                
                HorizontalOptions="Fill" 
                BackgroundColor="#F8C630"
                TextColor="#E54F6D"
                FontAttributes="Bold" 
                Clicked="LiderBoard_Clicked"
                 />
            <!--Shadow="#F1F1F1F, 5,5"-->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
