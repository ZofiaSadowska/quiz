<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="YourApp.NewGamePage"
    Shell.NavBarIsVisible="False">

    <Grid>

        <!-- Gradientowe tło -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#8E4BCF" Offset="0.0"/>
                <GradientStop Color="#6B2E9B" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Padding="20,48,20,0" RowDefinitions="Auto,*">

            <!-- Pasek tytułu -->
            <Grid ColumnDefinitions="60,*" VerticalOptions="Start">

                <!-- Back -->
                <Frame
                    Grid.Column="0"
                    HeightRequest="44"
                    WidthRequest="44"
                    CornerRadius="22"
                    BackgroundColor="#FFD43B"
                    HasShadow="False"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Padding="0">
                    <Label Text="←"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Black"/>
                </Frame>

                <!-- New game -->
                <Label Grid.Column="1"
                       Text="New game"
                       FontSize="22"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Margin="12,0,0,0"
                       TextColor="White"/>
            </Grid>

            <!-- Karta z polami -->
            <StackLayout Grid.Row="1"
                         Padding="20,30"
                         Spacing="20"
                         VerticalOptions="Start">

                <Frame BackgroundColor="#4A1F63"
                       CornerRadius="18"
                       Padding="18"
                       HasShadow="True"
                       HorizontalOptions="FillAndExpand">

                    <StackLayout Spacing="14">

                        <!-- Player 1 -->
                        <Label Text="Player 1's name"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#FFD43B"/>

                        <Frame Padding="0"
                               BackgroundColor="White"
                               CornerRadius="22"
                               HeightRequest="44">
                            <Entry Placeholder="Enter name"
                                   PlaceholderColor="#9A9A9A"
                                   VerticalOptions="Center"
                                   Padding="16,0"/>
                        </Frame>

                        <!-- Player 2 -->
                        <Label Text="Player 2's name"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#FFD43B"/>

                        <Frame Padding="0"
                               BackgroundColor="White"
                               CornerRadius="22"
                               HeightRequest="44">
                            <Entry Placeholder="Enter name"
                                   PlaceholderColor="#9A9A9A"
                                   VerticalOptions="Center"
                                   Padding="16,0"/>
                        </Frame>

                        <!-- Submit button -->
                        <Button Text="Submit"
                                BackgroundColor="#FFD43B"
                                TextColor="Black"
                                FontAttributes="Bold"
                                CornerRadius="24"
                                HeightRequest="48"
                                WidthRequest="180"
                                HorizontalOptions="Center"/>

                    </StackLayout>
                </Frame>

            </StackLayout>

        </Grid>

    </Grid>

</ContentPage>
